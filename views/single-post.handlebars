<article>
    <h3>{{post.title}}</h3>
    <h4>Posted by {{post.user.username}} on {{post.created_at}}</h4>
    <h5>{{post.content}}</h5>
    <h5>
        <a href="/post/{{post.id}}">{{post.comments.length}} comments</a>
    </h5>
</article>
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">Add Comment</button>
    </div>
</form>
{{/if}}
<div class="comments">
    {{#each post.comments}}
    
    <section class="comment">
        <h5>By {{user.username}} on {{created_at}}</h5>
        <p>{{comment_text}}</p>
    </section>
    
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}
