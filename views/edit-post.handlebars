<div class="row justify-content-evenly">
    <div class="col-lg-6 col-sm-12">
      <a href="/dashboard"> &larr; Back to dashboard</a>
      <h2>Edit Post</h2>

      <form class="edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
        
        <label for="post-content" class="form-label">Content</label>
        <textarea id="post-content" name="post-content" class="form-control" >{{post.content}}</textarea>

        <div class="edit-btn-container d-flex justify-content-evenly">
          <button type="submit" class="save-edit-post-btn btn btn-success">Save post</button>
          <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
        </div>
      </form>

      <h2>Add Comment to Post</h2>

      <form class="comment-form">
        <label for="comment-body" class="form-label">Comment Body</label>
        <textarea name="comment-body" class="form-control"></textarea>
        <div class="comment-btn-container d-flex justify-content-evenly">
          <button type="submit" class="save-comment-btn btn btn-success">Add Comment</button>
        </div>
    </form>
    </div>
    
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>